<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Complementario42429841.MainPage">

    <VerticalStackLayout>
            <Image
                Source="cuadradocubo.png"
                HeightRequest="185"
                Aspect="AspectFit"/>
        <Label 
            Text="Obtener el Cuadrado y el Cubo de un número"
            Padding="50"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Entry x:Name="entry1" Placeholder="Introduce un número "/>
        <Entry x:Name="entry2" Placeholder="Resultado"/>
        <Button Text="Calcular" Clicked="Button_Clicked"/>
    </VerticalStackLayout>

</ContentPage>
